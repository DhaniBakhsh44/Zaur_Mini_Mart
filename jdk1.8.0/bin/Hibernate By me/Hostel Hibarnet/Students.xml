<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC

"-//Hibernate/Hibernate Mapping DTD 3.0//EN"

"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="StudentBean" table="Students">
<id name="stdId" type="int" column="STD_ID" >

<generator class="increment"/>
</id>


<property name="stdName">
<column name="STD_NAME" />
</property>

<property name="FName">
<column name="FNAME" />
</property>


<property name="surName">
<column name="SURNAME" />
</property>

<property name="rollNo">
<column name="ROLL_NO" />
</property>


<property name="remarks">
<column name="REMARKS" />
</property>


</class>

</hibernate-mapping>